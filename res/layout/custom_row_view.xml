<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="64dip"
    android:padding="6dip">
            
    <TextView
        android:id="@+id/carpark_calcDistance"
       	android:textSize="48sp"
		android:textStyle="bold"
		android:textColor="#000000"
		android:text="192"
		android:layout_alignParentTop="true"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        android:paddingLeft="2dip"
        />

    <TextView 
        android:gravity="bottom" 
        android:id="@+id/metric_type" 
        android:textSize="16sp" 
        android:text="KMS" 
        android:textColor="#000000" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:layout_below="@+id/carpark_calcDistance"
        android:paddingLeft="15dip"
        />
        
        <TextView 
	   android:layout_height="wrap_content" 
	   android:layout_width="wrap_content" 
	   android:id="@+id/carpark_street_address" 
	   android:text="1 Street Rd."
	   android:textColor="#000000"
	   android:textStyle="bold"
	   android:textSize="14sp"
	   android:paddingLeft="40dip"
	   android:paddingTop="10dip"
	   android:layout_toRightOf="@+id/carpark_calcDistance"
	   android:singleLine="true"
	/>
    
    <TextView 
	   android:layout_height="wrap_content" 
	   android:layout_width="wrap_content" 
	   android:id="@+id/carpark_rate"
	   android:text="$2.50/hr"
	   android:textSize="14sp" 
	   android:textColor="#000000"
	   android:paddingLeft="40dip"
	   android:layout_toRightOf="@+id/carpark_calcDistance"
	   android:layout_below="@+id/carpark_street_address"
	   android:singleLine="true"
	/>
	
	<TextView 
	   android:layout_height="wrap_content" 
	   android:layout_width="wrap_content" 
	   android:id="@+id/carpark_capacity"
	   android:text="0 spaces"
	   android:textSize="14sp"
	   android:textColor="#000000"
	   android:paddingLeft="40dip"
	   android:layout_below="@+id/carpark_rate"
	   android:layout_toRightOf="@+id/carpark_calcDistance"
	   android:singleLine="true"
       android:ellipsize="marquee"
	/>
	  
</RelativeLayout>